{
  "name": "valtio-cache",
  "version": "1.0.0",
  "description": "Production-ready tiny library for synchronous caching and persistence of Valtio state manager",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
