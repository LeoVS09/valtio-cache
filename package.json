  "bugs": {
    "url": "https://github.com/LeoVS09/valtio-cache/issues"
  },
  "homepage": "https://github.com/LeoVS09/valtio-cache#readme",
  "peerDependencies": {
    "valtio": "^2.0.0"
  },
  "devDependencies": {
    "microbundle": "^0.15.1",
    "react": "^19.1.0",
    "typescript": "^5.8.3",
    "valtio": "^2.1.5",
    "vitest": "^3.2.4"
